// ///////////////////////////////////////////////////////////////////////////////////////////////////
// 
// 
// 180*380px
// 
///////////////////////////////////////////////////////////////////////////////////////////////////
@media screen and (min-width: 180px)  and (max-width: 380px){
.grid-escort{
  width 100vw
  display flex
  flex-direction column
  align-items center
}

.section-polovinka {
  display flex
  flex-direction column
  
}

.headway {
  margin-right 8vw
  margin-left 3vw
  box-sizing border-box
  width 90vw
  background-color teal 
  .container {  
    .headway-header{
      flex-direction column
      justify-content center
      align-items center
      width 90vw
      .btn-manual {
        margin-top 5vh
      }
      .section-title {
        text-align center
       
      }
    }
  }
}
.way-item.headway-item__1 {
  flex-direction column
  ul {
    margin 0
    padding 0
    margin 0 auto
    margin-top 5vh
    min-width 80vw
  }
}
.wayup {
  flex-direction column
  align-items center
  .wayup-item {
    margin-bottom 1vh
  }
  .wayup-arrow {
    background url('../img/general/arrow-bt.png') no-repeat 50% 50%
    background-size contain 
    width 10vw
    height 10vh
  }
}
.page-header {
  background: linear-gradient(to right, transparent 10%, black), url("../img/general/header-bg.jpg") no-repeat 50% 50%;
  }
.consult {
  .container {
    flex-direction column 
 
    .consult-item {
      text-align left
      margin-bottom 0
      padding-bottom 3vh
      background linear-gradient(to left, transparent 80%, transparent 88%, rgba(102,169,0, .5), transparent 90%, rgba(102,169,0, .98)), 
      linear-gradient(to right, transparent 90%, rgba(102,169,0, .78)) 
      &:before {
        width 50vw
        height 15vh
      }
    }
    }
}
}
