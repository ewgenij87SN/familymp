  margin-left 3vw
  box-sizing border-box
  width 90vw
  background-color teal 
  .container {
    .headway-header{
      flex-direction column
      justify-content center
      align-items center
      width 90vw
      .btn-manual {
        margin-top 5vh
      }
      .section-title {
        text-align center
      }
    }
  }
}
.way-item.headway-item__1 {
  flex-direction column
}
.wayup {
  flex-direction column
  align-items center
  .wayup-item {
    margin-bottom 3vh
    width 90vw
  }
  .wayup-arrow {
    background url('../img/general/arrow-bt.png') no-repeat 50% 50%
    background-size contain 
