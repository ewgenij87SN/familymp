  }
}

.consult {
  .container {
    flex-direction column 
    margin-top 10vh
    .consult-item {
      text-align left
      margin-bottom 0
      padding-bottom 3vh
      background linear-gradient(to left, transparent 80%, transparent 88%, rgba(102,169,0, .5), transparent 90%, rgba(102,169,0, .98)), 
      linear-gradient(to right, transparent 90%, rgba(102,169,0, .78)) 
      &:before {
        width 50vw
        height 15vh
      }
    }
    }
}
.header-top {
  // background-color teal
  display flex
  flex-direction row
  justify-content space-between
  align-items center
