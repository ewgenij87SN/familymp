// ///////////////////////////////////////////////////////////////////////////////////////////////////
// 
// 
// 180*380px
// 
///////////////////////////////////////////////////////////////////////////////////////////////////
@media screen and (min-width: 180px)  and (max-width: 380px){
#fix_nv {
  display block
}
.promo {
  margin-left 5vw
}

.footer {
  font-size .6em 
}
.copyright {
  padding-top 2vh
  font-size 1.2em
}
.popup{
  width 90vw
  font-size 0.7em
}
.book{
  img { 
    width 90vw 
  }
}
.book {
  .section-title {
      text-align center
      line-height 1.3em
      padding-top 30px
      margin-bottom 0
      font-family 'Montserrat', sans-serif
      font-size 1.3em
      text-transform uppercase
      font-weight 900

  }
}  
.book-header-img{
  
  width 90vw}
.book-header {
  flex-direction column
}
  



.familyway {
  padding-bottom 0
  .section-title {
    font-size 1.3em 
  }
  .way-item {
    font-size 0.7em
    line-height 1.3em
    margin-top 3vh
    padding-right 1vh
    padding-left 1vh
    
  }
}
.bottom-text {
  font-size 0.7em

}
.headway {
  padding-bottom 7vh
  .headway-item__2 {
    margin-bottom 8vh

  }
}
.headway-item__1 ul {
  width none
}


.footer {
  display flex
  flex-direction column
  text-align center
}






.escort {
  .section-title {
    font-size 1.5em
    text-align center
  }
  .escort-item {
    margin-bottom 2vh 
  }
  .escort-item:last-of-type {
    margin-bottom 5vh
  }
}  





.grid-escort{
  width 95vw
  display flex
  flex-direction column
  align-items center
}

.section-polovinka {
  display flex
  flex-direction column
  
}

.headway {
  margin-right 8vw
  margin-left 3vw
  box-sizing border-box
  width 90vw
  // background-color teal 
  .container {  
    .headway-header{
      flex-direction column
      justify-content center
      align-items center
      width 90vw
      .btn-manual {
        margin-top 5vh
      }
      .section-title {
        text-align center
       
      }
    }
  }
  .way-item {
    font-size 0.7em
    li {
      line-height 1.2em 
    }
  }
}
.way-item.headway-item__1 {
  flex-direction column
  ul {
    margin 0
    padding 0
    margin 0 auto
    margin-top 5vh
    min-width 80vw
  }
}
.wayup {
  flex-direction column
  align-items center
  .wayup-item {
    margin-bottom 1vh
  }
  .wayup-arrow {
    background url('../img/general/arrow-bt.png') no-repeat 50% 50%
    background-size contain 
    width 10vw
    height 10vh
  }
}
.page-header {
  background: linear-gradient(to right, transparent 10%, black), url("../img/general/header-bg.jpg") no-repeat 50% 50%;
}
.consult {
  .container {
    flex-direction column 
    .consult-item {
      text-align left
      margin-bottom 0
      padding-bottom 3vh
      padding-left 12vw
      padding-right 9.5vw
      font-size .8em 
      background linear-gradient(to left, transparent 80%, transparent 88%, rgba(102,169,0, .5), transparent 90%, rgba(102,169,0, .98)), 
      linear-gradient(to right, transparent 90%, rgba(102,169,0, .78)) 
      &:before {
        width 50vw
        height 15vh
      }
    }
    }
    
}


.section-title {
  font-size 2em 
  line-height 1.1em
  font-style italic 
}
}
