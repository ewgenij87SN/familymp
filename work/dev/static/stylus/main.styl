.popup 
  background-color #FFF 
  width 600px
  padding 20px
  margin 0 auto
  opacity .9
  
form 
width 630px
padding-right 390px
// background url("../img/general/pen.png") no-repeat 100% 40px
box-sizing content-box
min-height 650px
padding-bottom 175px
    
label
  display inline-block
  padding-bottom 12px
  padding-top 25px
  padding-left 20px
  line-height 1

input, select, textarea
  width 100%
  padding 12px
  border 2px solid #d5d5d5
  line-height 1
  &:hover
    border 2px solid #b6b6b6
  &:focus
     border 2px solid #8d745a


       
.checkbox
  border-bottom 2px solid #d5d5d5
  width 100%
  margin-bottom 40px
  input[type="checkbox"] 
    display none
    &:checked
      &~.custom-checkbox
        &:after
          background-color #8d745a
          border 2px solid gray
          border-radius 3px
          
          
.custom-checkbox
  position relative
  display block
  width 20px
  height 20px
  margin-right 20px
  border 1px solid #7e7e7e
  border-radius 5px
  float left
  &:after
    content ''
    position absolute
    top 2px
    right 2px
    left 2px
    bottom 2px
    transition all linear .2s
.checkbox-text
  margin-top 2px
  display inline-block
  
input[type="submit"]
  margin 0 auto
  margin-top 30px
  text-transform uppercase
  width 170px
  border none
