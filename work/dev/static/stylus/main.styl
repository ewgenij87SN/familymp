html 
  // line-height 1
  font-size 16px

body
  // font-family "mainFont"
  font-family "PT Serif", serif
  background-color black
  min-width 1040px

a
  text-decoration none
  color white
  text-transform uppercase 
  font-size 18px
  font-family "Montserrat", sans-serif 
   

h1,h2,h3,h4,h5,h6
  margin 0
  font-family "Montserrat", sans-serif
  font-weight 600

ul,li
  margin 0
  padding 0
  list-style-type none
  
p
  margin 0
  


audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle
  
textarea
  resize none

section
  position relative
  margin-bottom 20px

input,
select,
button
  outline none

*, *:before, *:after
  box-sizing border-box
  
.hide
  display none
  
.show
  display block
  
::-moz-selection 
  background: #b3d4fc;
  text-shadow: none;
  
::selection 
  background: #b3d4fc;
  text-shadow: none;
  
.clearfix:before,
.clearfix:after 
  content: " ";
  display: table;

.clearfix:after 
  clear: both;

.clearfix 
  *zoom: 1;

.container
  width 100%
  max-width 1020px
  margin 0 auto
  
  



// Общие стили
@import '_common_styles.styl'

// Стили шапки
@import 'modules/_header.styl'

// Стили меню
@import 'modules/_menu.styl'

// Стили главной страницы
@import 'page/_index.styl'

// Стили футера
